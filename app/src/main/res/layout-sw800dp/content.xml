<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.udacity.assignment.android.popularmoviesstageone.userinterface.AccessActivity"
    android:baselineAligned="true">

    <fragment
        android:id="@+id/listfragment"
        android:name="com.udacity.assignment.android.popularmoviesstageone.userinterface.fragments.PopularMoviesFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/popular_movies_list" />

    <fragment
        android:id="@+id/detailsfragment"
        android:name="com.udacity.assignment.android.popularmoviesstageone.userinterface.fragments.MovieDetailsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/details_layout" />
</LinearLayout>